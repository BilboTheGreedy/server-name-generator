{{define "nav"}}
<nav class="bg-gray-800 text-white">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <a href="/" class="flex items-center">
                        <svg class="h-8 w-8 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                        </svg>
                        <span class="font-semibold text-xl">Server Name Generator</span>
                    </a>
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="/admin" class="{{if eq .Data.CurrentPage "dashboard"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} px-3 py-2 rounded-md text-sm font-medium">Dashboard</a>
                        <a href="/admin/generate" class="{{if eq .Data.CurrentPage "generate"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} px-3 py-2 rounded-md text-sm font-medium">Generate</a>
                        <a href="/admin/manage" class="{{if eq .Data.CurrentPage "manage"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} px-3 py-2 rounded-md text-sm font-medium">Manage</a>
                        {{if .IsAdmin}}
                        <a href="/admin/users" class="{{if eq .Data.CurrentPage "users"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} px-3 py-2 rounded-md text-sm font-medium">Users</a>
                        {{end}}
                    </div>
                </div>
            </div>
            <div class="hidden md:block">
                <div class="ml-4 flex items-center md:ml-6">
                    {{if .IsAuthenticated}}
                    <div class="ml-3 relative group">
                        <div>
                            <button type="button" class="max-w-xs bg-gray-800 rounded-full flex items-center text-sm focus:outline-none" id="user-menu-button">
                                <span class="sr-only">Open user menu</span>
                                <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-gray-500">
                                    <span class="text-sm font-medium leading-none text-white">{{index .User.Username 0 | printf "%s"}}</span>
                                </span>
                            </button>
                        </div>
                        <div class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 hidden group-hover:block" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                            <div class="block px-4 py-2 text-sm text-gray-700 border-b">
                                <div class="font-medium">{{.User.Username}}</div>
                                <div class="text-gray-500 text-xs">{{.User.Email}}</div>
                            </div>
                            <a href="/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem" tabindex="-1">Sign out</a>
                        </div>
                    </div>
                    {{else}}
                    <a href="/login" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Login</a>
                    {{end}}
                </div>
            </div>
            <div class="-mr-2 flex md:hidden">
                <!-- Mobile menu button -->
                <button type="button" class="bg-gray-800 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-white hover:bg-gray-700 focus:outline-none" aria-controls="mobile-menu" aria-expanded="false" id="mobile-menu-toggle">
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state -->
    <div class="md:hidden hidden" id="mobile-menu">
        <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
            <a href="/admin" class="{{if eq .Data.CurrentPage "dashboard"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} block px-3 py-2 rounded-md text-base font-medium">Dashboard</a>
            <a href="/admin/generate" class="{{if eq .Data.CurrentPage "generate"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} block px-3 py-2 rounded-md text-base font-medium">Generate</a>
            <a href="/admin/manage" class="{{if eq .Data.CurrentPage "manage"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} block px-3 py-2 rounded-md text-base font-medium">Manage</a>
            {{if .IsAdmin}}
            <a href="/admin/users" class="{{if eq .Data.CurrentPage "users"}}bg-gray-900 text-white{{else}}text-gray-300 hover:bg-gray-700 hover:text-white{{end}} block px-3 py-2 rounded-md text-base font-medium">Users</a>
            {{end}}
        </div>
        <div class="pt-4 pb-3 border-t border-gray-700">
            {{if .IsAuthenticated}}
            <div class="flex items-center px-5">
                <div class="flex-shrink-0">
                    <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-gray-500">
                        <span class="text-sm font-medium leading-none text-white">{{index .User.Username 0 | printf "%s"}}</span>
                    </span>
                </div>
                <div class="ml-3">
                    <div class="text-base font-medium leading-none text-white">{{.User.Username}}</div>
                    <div class="text-sm font-medium leading-none text-gray-400">{{.User.Email}}</div>
                </div>
            </div>
            <div class="mt-3 px-2 space-y-1">
                <a href="/logout" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Sign out</a>
            </div>
            {{else}}
            <div class="mt-3 px-2 space-y-1">
                <a href="/login" class="block px-3 py-2 rounded-md text-base font-medium text-gray-400 hover:text-white hover:bg-gray-700">Login</a>
            </div>
            {{end}}
        </div>
    </div>
</nav>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        
        mobileMenuToggle.addEventListener('click', function() {
            mobileMenu.classList.toggle('hidden');
            // Toggle the icons
            mobileMenuToggle.querySelector('.block').classList.toggle('hidden');
            mobileMenuToggle.querySelector('.hidden').classList.toggle('hidden');
        });
    });
</script>
{{end}}